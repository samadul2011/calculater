<contents of calculator.kv>
<CalcLogic>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    TextInput:
        id: display
        text: root.display_text
        font_size: 55
        halign: 'right'
        readonly: True
        background_color: (1, 1, 1, 1)
        foreground_color: (0, 0, 0, 1)

    GridLayout:
        cols: 4
        rows: 5
        spacing: 10
        size_hint_y: None
        height: self.minimum_height

        Button:
            text: 'C'
            on_press: root.on_button('C')
        Button:
            text: 'CE'
            on_press: root.on_button('CE')
        Button:
            text: '←'
            on_press: root.on_button('←')
        Button:
            text: '±'
            on_press: root.on_button('±')

        Button:
            text: '7'
            on_press: root.on_button('7')
        Button:
            text: '8'
            on_press: root.on_button('8')
        Button:
            text: '9'
            on_press: root.on_button('9')
        Button:
            text: '/'
            on_press: root.on_button('/')

        Button:
            text: '4'
            on_press: root.on_button('4')
        Button:
            text: '5'
            on_press: root.on_button('5')
        Button:
            text: '6'
            on_press: root.on_button('6')
        Button:
            text: '*'
            on_press: root.on_button('*')

        Button:
            text: '1'
            on_press: root.on_button('1')
        Button:
            text: '2'
            on_press: root.on_button('2')
        Button:
            text: '3'
            on_press: root.on_button('3')
        Button:
            text: '-'
            on_press: root.on_button('-')

        Button:
            text: '0'
            on_press: root.on_button('0')
        Button:
            text: '.'
            on_press: root.on_button('.')
        Button:
            text: '='
            on_press: root.on_button('=')
        Button:
            text: '+'
            on_press: root.on_button('+')

        Button:
            text: 'MC'
            on_press: root.on_button('MC')
        Button:
            text: 'MR'
            on_press: root.on_button('MR')
        Button:
            text: 'M+'
            on_press: root.on_button('M+')
        Button:
            text: 'M-'
            on_press: root.on_button('M-')
