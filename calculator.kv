<CalculatorLayout>:
    orientation: 'vertical'
    spacing: 10
    padding: 10

    TextInput:
        id: display
        size_hint: (1, 0.2)
        font_size: 32
        multiline: False
        background_color: (0, 0, 0, 1)
        foreground_color: (1, 1, 1, 1)
        cursor_color: (1, 1, 1, 1)
        hint_text_color: (0.7, 0.7, 0.7, 1)

    GridLayout:
        cols: 4
        spacing: 5
        size_hint: (1, 0.8)

        # Row 1: Memory buttons
        Button:
            text: 'MC'
            font_size: 18
            on_press: root.click_button('MC')
        Button:
            text: 'MR'
            font_size: 18
            on_press: root.click_button('MR')
        Button:
            text: 'M+'
            font_size: 18
            on_press: root.click_button('M+')
        Button:
            text: 'M-'
            font_size: 18
            on_press: root.click_button('M-')

        # Row 2: Clear buttons
        Button:
            text: 'C'
            font_size: 18
            on_press: root.click_button('C')
        Button:
            text: 'CE'
            font_size: 18
            on_press: root.click_button('CE')
        Button:
            text: '←'
            font_size: 18
            on_press: root.click_button('←')
        Button:
            text: '±'
            font_size: 18
            on_press: root.click_button('±')

        # Remaining rows: Numbers and operators
        Button:
            text: '7'
            on_press: root.click_button('7')
        Button:
            text: '8'
            on_press: root.click_button('8')
        Button:
            text: '9'
            on_press: root.click_button('9')
        Button:
            text: '/'
            on_press: root.click_button('/')

        Button:
            text: '4'
            on_press: root.click_button('4')
        Button:
            text: '5'
            on_press: root.click_button('5')
        Button:
            text: '6'
            on_press: root.click_button('6')
        Button:
            text: '*'
            on_press: root.click_button('*')

        Button:
            text: '1'
            on_press: root.click_button('1')
        Button:
            text: '2'
            on_press: root.click_button('2')
        Button:
            text: '3'
            on_press: root.click_button('3')
        Button:
            text: '-'
            on_press: root.click_button('-')

        Button:
            text: '0'
            on_press: root.click_button('0')
        Button:
            text: '.'
            on_press: root.click_button('.')
        Button:
            text: '='
            on_press: root.click_button('=')
        Button:
            text: '+'
            on_press: root.click_button('+')
